script/source = "extends Node3D

var mat

@onready var fog = $FogVolume


func _ready():
	mat = FogMaterial.new()
	mat.density = 0.6
	mat.albedo = Color(0.9, 0.1, 0)
	fog.material = mat
	
	$GPUParticles3D.emitting = true


func _process(delta):
	mat.density = lerp(mat.density, 0.0, delta * 0.75)
	var size_change = delta * (2 / fog.size.length())
	fog.size.x += size_change
	fog.size.y += size_change
	fog.size.z += size_change
	
	fog.translate(Vector3(0, -2, 0) * delta)
	
	if mat.density < 0.001:
		queue_free()
"

