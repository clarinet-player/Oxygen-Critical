script/source = "extends Node



var peer = ENetMultiplayerPeer.new()
var local_player
var freecam
var mp_active = false

var players := Array()
var game_running := false
var round_running := false

var playable_area : AABB
var bombsites : Array
var bombs := Array()



func _ready():
	
	# Server setup
	if DisplayServer.get_name() == \"headless\":
		
		mp_active = true
		sync_level(1)
		
		await get_tree().create_timer(0.1).timeout
		
		multiplayer.peer_connected.connect(_on_connect)
		multiplayer.peer_disconnected.connect(_on_disconnect)
		
		peer.create_server(7777)
		multiplayer.multiplayer_peer = peer



#region Multiplayer
func connect_player():
	peer.close()
	peer.create_client(\"66.179.249.44\", 7777)
	multiplayer.multiplayer_peer = peer
	mp_active = true

func cancel_connect():
	peer.close()
	mp_active = false

func disconnect_player():
	mp_active = false
	for child in get_children():
		if child.name == \"MultiplayerSpawner\":
			continue
		child.queue_free()
		remove_child(child)
	peer.close()



func _on_connect(id : int):
	print(\"player connected: \", id)
	
	players.append(id)
	
	sync_level.rpc_id(id, 1)
	await get_tree().create_timer(0.1).timeout
	
	if players.size() >= 2 and !game_running:
		_game_loop()
	elif !game_running:
		ui_message.rpc(0)
	else:
		ui_message.rpc_id(id, 4)

func _on_disconnect(id):
	print(\"player disconnected: \", id)
	if get_node_or_null(str(id)):
		get_node(str(id)).die.rpc()
	players.erase(id)
#endregion



func _game_loop():
	
	game_running = true
	while game_running:
		
		print(\"Round start.\")
		for id in players:
			var new_player = preload(\"res://classes/player.tscn\").instantiate()
			new_player.name = str(id)
			add_child(new_player)
			await get_tree().create_timer(0.05).timeout
			
			var team1 := 0
			var team2 := 0
			for player in get_tree().get_nodes_in_group(\"Players\"):
				print(\"player\")
				if player.team == 1:
					team1 += 1
				elif player.team == 2:
					team2 += 1
					print()
			if team1 > team2:
				new_player.set_team.rpc(2)
			else:
				new_player.set_team.rpc(1)
		
		
		while true:
			await get_tree().create_timer(0.1).timeout
			
			var sites_destroyed := 0
			for site in bombsites:
				if site[1] == 2:
					sites_destroyed += 1
			if sites_destroyed > bombsites.size() / 2:
				ui_message(2)
				print(\"Round end. Bombs detonated.\")
				break
			
			var team1 := true
			var team2 := true
			for player in get_tree().get_nodes_in_group(\"Players\"):
				if player.team == 1:
					team1 = false
				elif player.team == 2:
					team2 = false
			if team1:
				ui_message.rpc(2)
				print(\"Round end. CTs eliminated.\")
				break
			elif team2:
				ui_message.rpc(1)
				print(\"Round end. Ts eliminated.\")
				break
		
		await get_tree().create_timer(2.0).timeout
		reset.rpc()
		await get_tree().create_timer(0.05).timeout
		
		if players.size() < 2:
			game_running = false
			ui_message.rpc(0)



func find_spawnpoint(exclude, player_team):
	var best_point
	var best_value := 0.0
	
	var players = get_tree().get_nodes_in_group(\"Players\")
	players.erase(exclude)
	var spawnpoints = get_tree().get_nodes_in_group(\"Spawnpoints\")
	
	
	for point in spawnpoints:
		var value := 0.0
		
		if player_team != 0 and point.team != player_team:
			continue
		
		for player in players:
			value += point.global_position.distance_to(player.global_position)
		if players.size() < 1:
			value = randf()
		if value > best_value:
			best_value = value
			best_point = point
	
	return best_point



@rpc(\"authority\", \"call_remote\", \"reliable\")
func sync_level(level : int):
	if level == 1:
		get_tree().change_scene_to_file(\"res://scenes/somnambulist.tscn\")
	
	await get_tree().create_timer(0.1).timeout
	if UiManager.active_menu != UiManager.spechud:
		UiManager.set_ui(0)



@rpc(\"authority\", \"call_remote\", \"reliable\")
func ui_message(ui : int):
	UiManager.set_ui(6)
	UiManager.spechud.set_message(ui)



@rpc(\"any_peer\", \"call_local\", \"reliable\")
func throw_grenade(type : int, position : Vector3, velocity : Vector3):
	if type == 1:
		var grenade : RigidBody3D = preload(\"res://weapons/grenades/he_grenade.tscn\").instantiate()
		
		add_child(grenade)
		grenade.global_position = position
		grenade.apply_impulse(velocity)



@rpc(\"any_peer\", \"call_local\", \"reliable\")
func plant_bomb(pos : Vector3, site : int):
	var bomb = preload(\"res://weapons/bomb/bomb.tscn\").instantiate()
	add_child(bomb)
	bomb.global_position = pos
	bomb.site = site
	bombs.append(bomb)
	
	bombsites[site][1] = 1

@rpc(\"any_peer\", \"call_local\", \"reliable\")
func defuse_bomb(site : int):
	for bomb in bombs:
		if bomb.site == site:
			bomb.defuse()
			bombsites[site][1] = 0
			break



@rpc(\"authority\", \"call_local\", \"reliable\")
func reset():
	bombs = Array()
	for site in bombsites:
		site[1] = 0
	
	for child in get_children():
		if child.name == \"MultiplayerSpawner\":
			continue
		remove_child(child)
		child.free()
"

