const fuse_time := 25000

var start_time := 0

var direction := true
var value := 0.0


func _ready():
	start_time = Time.get_ticks_msec()


func _process(delta):
	if direction:
		value += delta * 2
		if Time.get_ticks_msec() - start_time > 15000:
			value += delta
		if Time.get_ticks_msec() - start_time > 20000:
			value += delta
		if value >= 1.0:
			$AudioStreamPlayer3D.play()
			direction = false
	else:
		value -= delta * 2
		if Time.get_ticks_msec() - start_time > 20000:
			value -= delta
		if Time.get_ticks_msec() - start_time > 25000:
			value -= delta
		if value <= 0.0:
			direction = true
	$OmniLight3D.light_energy = value


func _physics_process(delta):
	if is_multiplayer_authority():
		if Time.get_ticks_msec() - start_time >= fuse_time:
			Gamemanager.end_round.rpc(2)
"

