script/source = "extends Control


var inv
var warningtime := 0


func _exit_tree():
	$spacewarning.hide()
	
	if inv == null:
		inv = Gamemanager.local_player.inventory
	
	var save = Array()
	for item in inv:
		if item != null:
			save.append(item.item_id)
	
	Settings.saved_inventory = save
	Settings.write_file()


func _process(_delta):
	if Input.is_action_just_pressed(\"B\"):
		UiManager.call_deferred(\"set_ui\", 3)
	if Time.get_ticks_msec() - warningtime > 750:
		$spacewarning.hide()


#region buying
func _buy_ak():
	if inv == null:
		inv = Gamemanager.local_player.inventory
	
	var size := 0
	for item in inv:
		if item != null:
			size += item.inventory_size
	if size < 3:
		var ak = preload(\"res://weapons/ak12/ak12.tscn\").instantiate()
		ak.magazine = ak.mag_size
		inv.append(ak)
	else:
		warningtime = Time.get_ticks_msec()
		$spacewarning.show()


